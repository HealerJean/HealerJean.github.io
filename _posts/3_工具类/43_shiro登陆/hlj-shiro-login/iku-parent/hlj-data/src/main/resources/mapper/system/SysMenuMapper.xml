	<select id="selectByExampleToMenu"  parameterType="SysMenuQuery"  resultMap="BaseResultMap">
		select sm.*
		from  sys_menu sm where sm.id in
		( select rrm.ref_menu_id from sys_role_menu_ref rrm
				where  sm.status = 10
				and rrm.ref_role_id in
