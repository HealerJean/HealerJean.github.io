#多点优惠服务器支持
#创建硬链接

upstream mysite {  
     server serverduodianyouhui.dangqugame.cn ;  
     server beiyongduodianyouhui.dangqugame.cn backup;   
 }

server {
    listen 80;
    server_name  keke.ssaayy.cn;
    location ~\.php$ {
            fastcgi_pass   127.0.0.1:9000;
            fastcgi_index  index.php;
            fastcgi_param  SCRIPT_FILENAME /usr/local/dataoke$fastcgi_script_name;
            include        fastcgi_params;
    }
    location / {
        root           /usr/local/dataoke;
        index  index.php;
    }
}


server {
        listen       80;
        server_name  server.duoquapp.net server.dangqugame.cn servertwo.duoquapp.net serverthree.duoquapp.net  rongqiserver.dangqugame.cn;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header REMOTE-HOST $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        location / {
         proxy_pass http://mysite;
        }
  }


# 测试端 运营前端
server {
        listen       80;
        server_name  testquan.dangqugame.cn;

        root        /usr/local/VueWebProject/;
        index      index.html,index.htm;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header REMOTE-HOST $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

     
     	location / {
            try_files $uri /index.html;
        }
}

